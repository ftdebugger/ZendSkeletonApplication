{% extends 'layout/layout.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Change Password for {{ zfcUserDisplayName() }}</h1>
    </div>

    {% if not status is null %}
        {% if status == true %}
            {{ alert('Password changed successfully.', 'alert-success') }}
        {% else %}
            {{ alert('Unable to update your password. Please try again.', 'alert-error') }}
        {% endif %}
    {% endif %}

    {% do changePasswordForm.get('identity').setValue(zfcUserIdentity().getEmail()) %}

    {{ form(changePasswordForm) }}

{% endblock content %}
