{% extends "admin/layout/layout" %}

{% block content %}

    <div class="page-header">
        <h1>List of {{ entity.name }}
            {% if entity.options.isAllowCreate() %}
                <a href="{{ url('admin/entity/entity/create', {'entity': entity.name}) }}" class="btn btn-info">Add</a>
            {% endif %}
            <button class="btn btn-success" data-toggle="collapse" data-target="#filter">Filter ↵</button>
        </h1>
    </div>

    <div id="filter" class="collapse{% if filter_open %} in{% endif %}">
        {{ form(filter) }}
    </div>
    <table class="table">
        <tr>
            {% for name in table.head %}
                <th>{{ name }}</th>
            {% endfor %}
            <th></th>
        </tr>

        {% for row in table %}
            <tr>
                {% for field in row %}
                    <td>{{ field }}</td>
                {% endfor %}
                <td>
                    {% if row.id %}
                        {% if entity.options.isAllowRemove() %}
                            <a href="#remove{{ row.id }}" data-toggle="modal" role="button" class="btn btn-danger btn-small">удалить</a>
                            <div id="remove{{ row.id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h3 id="myModalLabel">Approve</h3>
                                </div>
                                <div class="modal-body">
                                    <p>Are you really want to remove this entity?</p>
                                </div>
                                <div class="modal-footer">
                                    <form method="post" action="{{ url('admin/entity/entity/remove', {'entity': entity.name}) }}">
                                        <button class="btn btn-primary btn-danger" name="id" value="{{ row.id }}">remove</button>
                                    </form>
                                </div>
                            </div>
                        {% endif %}

                        {% if entity.options.isAllowEdit() %}
                            <a href="{{ url('admin/entity/entity/edit', {'entity': entity.name, 'id': row.id}) }}" class="btn btn-info btn-small">edit</a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>

    {{ paginationControl(paginator, 'Sliding', 'admin/pagination', {route: 'admin/entity/entity', routeParams: {entity: entity.name}}) }}

{% endblock %}
